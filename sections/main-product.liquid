{%- liquid
  assign media_layout = section.settings.gallery_layout | default: 'carousel'
  assign mobile_thumbnails = section.settings.mobile_thumbnails | default: 'hide'
  assign enable_image_zoom = section.settings.enable_image_zoom | default: false
  assign enable_sticky_info = section.settings.enable_sticky_info

  assign product_class = 'product--' | append: section.settings.media_size
  assign product_class = product_class | append: ' product--' | append: media_layout
  assign product_class = product_class | append: ' product--media-has-' | append: product.media.size
  if product.media.size > 1
    assign product_class = product_class | append: ' product--media-has-many'
  endif

  case media_layout
    when 'grid-mix'
      assign media_modulo = product.media.size | modulo: 3
      if media_modulo == 2
        assign product_class = product_class | append: ' product--odd-media'
      endif
  endcase
-%}
{% if product.metafields.custom.gift_products.value != blank %}
  {% assign compare_at_price = product.selected_or_first_available_variant.compare_at_price %}
  {% assign price = product.selected_or_first_available_variant.price %}
  {% assign money_price = price | money %}
  {% assign amount = compare_at_price | minus: price | times: 100 | divided_by: compare_at_price | append: '%' %}
  <div class="niccos-search-drawer">
    <div class="search-action-bar">
      <div class="search_and_close">
        <div class="search__action">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
          <input type="search" id="search_product_action" placeholder="Hier suchen..." />
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
      </div>
      <div class="search-action__tab">
        <div class="tab-item active" data-tag="all">Alle</div>
        <div class="tab-item" data-tag="her">Damen</div>
        <div class="tab-item" data-tag="him">Herren</div>
        <div class="tab-item" data-tag="unisex">Unisex</div>
      </div>
    </div>
    <div class="search-product-items">
      {% for gift_product in product.metafields.custom.gift_products.value %}
        {%- assign tag_names = '' -%}
        {% for tag in gift_product.tags %}
          {%- assign tag_names = tag_names | append: tag -%}
        {% endfor %}
        <div class="search-product-item" data-tags="{{ tag_names }}">
          <div class="search-product-item__info">
            <div class="search-product-item__title">{{ gift_product.title }}</div>
            <div class="search-product-item_badges">
              {% for badge in gift_product.tags %}
                {% if badge contains "niccos-bestseller" %}
                  <div class="best_badge">Best Seller</div>
                {% endif %}
                {% if badge contains "niccos-him" %}
                  <div class="him_badge">For him</div>
                {% endif %}
                {% if badge contains "niccos-her" %}
                  <div class="her_badge">For her</div>
                {% endif %}
                {% if badge contains 'niccos-unisex' %}
                  <div class="unisex_badge">Unisex</div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
          <div class="search-product-item__action">
            <div class="search-product-item__quantity">
              <button class="quantity__remove">-</button>
              <input type="number" name="bundle-quantity" min="1" max="3" class="bundle-quantity" />
              <button class="quantity__add">+</button>
            </div>
            <div class="search-product-item__selector">
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="niccos-search-footer">
      <div class="success-msg">
        <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="0.5" width="16" height="16" rx="8" fill="#4D8127"></rect>
          <path d="M4.83149 7.51592L3.5 8.77192L7.39362 12L13.5 5.05698L11.9633 4L7.16762 9.45273L4.83149 7.51592Z" fill="#F4FBEA"></path>
          <rect x="0.5" y="16" width="16" height="1" fill="#F4FBEA"></rect>
        </svg>
        <div class="success-msg_text">{{ amount }} discount applied</div>
      </div>
      <button class="choose_btn niccos-search-btn" disabled>Choose 3 fragrances</button>
      <button class="show_selector-items niccos-search-btn" disabled><span class="select_items"></span>of 3 items selected</button>
      <button class="add_to_cart_btn niccos-search-btn">Add to cart · {{ money_price }} <span class="compare_at_price">{{ compare_at_price | money }}</span></button>
    </div>
  </div>
{% endif %}
<product-info
  id="MainProduct-{{ section.id }}"
  data-section="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-update-url="true"
  data-url="{{ product.url }}"
  class="section block section-{{ section.id }} section--padding page-width color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
  {% unless product.has_only_default_variant %}
    {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
  {% endunless %}
  {%- assign has_models = product.media | where: 'media_type', 'model' | first -%}
  {%- if has_models -%}
    <link
      id="ModelViewerStyle"
      rel="stylesheet"
      href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
      media="print"
      onload="this.media='all'"
    >
    <link
      id="ModelViewerOverride"
      rel="stylesheet"
      href="{{ 'component-model-viewer-ui.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}
  {%- if enable_image_zoom -%}
    <link
      id="Photoswipe"
      rel="stylesheet"
      href="{{ 'photoswipe-component.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}

  <script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>

  {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
  <div class="product flex flex-wrap {{ product_class }}">
    {%- if product.media.size > 0 -%}
      <motion-element data-motion="fade-up" data-motion-delay="50" class="product__media-wrapper w-full relative">
        {% render 'product-media-gallery',
          enable_sticky_info: enable_sticky_info,
          media_layout: media_layout,
          mobile_thumbnails: mobile_thumbnails,
          variant_images: variant_images,
          enable_image_zoom: enable_image_zoom
        %}
      </motion-element>
    {%- endif -%}
    <motion-element data-motion="fade-up" data-motion-delay="100" class="block product__info-wrapper w-full">
      {% render 'product-information-blocks', enable_sticky_info: enable_sticky_info, update_browser_history: true %}
    </motion-element>
  </div>
  <product-recently-viewed data-product-id="{{ product.id }}" class="hidden"></product-recently-viewed>
  {%- if enable_image_zoom -%}
    <script src="{{ 'photoswipe.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {%- if product.media.size > 0 -%}
    <script src="{{ 'media-gallery.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {%- if has_models -%}
    <script type="application/json" id="ProductJSON-{{ product.id }}">
      {{ product.media | where: 'media_type', 'model' | json }}
    </script>
    <script src="{{ 'product-model.js' | asset_url }}" defer></script>
  {%- endif -%}

  <script type="application/ld+json">
    {{ product | structured_data }}
  </script>
</product-info>

